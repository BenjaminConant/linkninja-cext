{
  "manifest_version": 2,

  "name": "linkninja",

  "short_name": "linkninja",
  
  "description": "Save links to your linkninja account with the click of a button.",
  
  "version": "0.1",
  
  "background": { "scripts": ["bower_components/jquery/dist/jquery.js", "postlink.js", "user.js"] },
  
  "icons": { 
              "16":"icon_16.png", 
              "48":"icon_48.png", 
              "128":"icon_128.png" 
      }, 
  "browser_action": {
    "default_icon": "icon_16.png"
    // "default_popup": "login.html"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "http://localhost:9000/"
  ]
  
}